@model CRUDMVC.Models.Contacto
@{
    ViewData["Title"] = "Detalle Contacto";
}

<h1 class="text-center">Conctacto con .NET 8 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>
                        Detalle Contacto
                    </strong>
                </h3>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item">
                        <strong>Nombre: </strong>@Html.DisplayFor(m => m.Nombre)
                    </li>
                    <li class="list-group-item">
                        <strong>Telefono: </strong>@Html.DisplayFor(m => m.Telefono)
                    </li>
                    <li class="list-group-item">
                        <strong>Email: </strong>@Html.DisplayFor(m => m.Email)
                    </li>
                    <li class="list-group-item">
                        <strong>Fecha Creacion: </strong>@Html.DisplayFor(m => m.FechaCreacion)
                    </li>
                </ul>
                <br />
                <a asp-controller="Inicio" asp-action="Index">Volver a Listado</a>
            </div>
        </div>
    </div>
</div>