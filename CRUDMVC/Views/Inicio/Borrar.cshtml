@model CRUDMVC.Models.Contacto
@{
    ViewData["Title"] = "Borrar Contacto";
}

<h1 class="text-center">Conctacto con .NET 8 (.NET Core MVC)</h1>


<div class="row">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h3 class="text-white">
                    <strong>
                        Borrar Contacto
                    </strong>
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Borrar" method="post">

                    @* ID del usuario como campo oculto *@
                    <input type="hidden" asp-for="Id" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" type="text" readonly />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Telefono" class="control-label">Telefono</label>
                        <input asp-for="Telefono" class="form-control" type="text" readonly />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input asp-for="Email" class="form-control" type="text" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn btn-danger d-block mx-auto">
                            <i class="fas fa-user"></i> Eliminar Contacto
                        </button>
                    </div>
                </form>
                <br />
                <a asp-controller="Inicio" asp-action="Index">Volver a Listado</a>
            </div>
        </div>
    </div>
</div>